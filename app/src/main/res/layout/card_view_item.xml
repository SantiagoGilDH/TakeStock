<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:id="@+id/card_view_item_card_view"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_view_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_item_independence"
                    android:layout_width="0dp"
                    android:layout_weight="1.6"
                    android:lines="1"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_emoticon_smile"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:text="lorem"
                    />

                <TextView
                    android:id="@+id/text_view_item_stock"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:text="@string/by"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/text_view_needed_for_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/text_view_item_price"
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_money_black_24dp"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:textColor="@color/secondary_text"
                android:text="@string/minus_sign"
                android:textSize="24sp"
                />

            <ImageButton
                android:id="@+id/button_cart_subtract"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_substract_shopping_cart_black_24dp"
                android:text="@string/minus_sign"
                android:textSize="24sp"
                android:elevation="3dp"
                />

            <Button
                android:id="@+id/button_cart_to_stock"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_height="match_parent"
                android:text="@string/less_than"
                android:textColor="@color/secondary_text"
                android:textSize="18sp"
                />

            <ImageButton
                android:id="@+id/button_cart_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:elevation="3dp"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:textColor="@color/secondary_text"
                android:text="@string/plus_sign"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:textSize="18sp"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>