<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.item_detail.FragmentItemDetail"
    android:background="@color/cardview_light_background"
    >


    <TextView
        android:id="@+id/text_view_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:layout_margin="5dp"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textSize="24sp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            />

        <TextView
            android:id="@+id/text_view_item_stock"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:text="@string/lorem_ipsum"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consumption_rate"
            android:textSize="24dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/textViewConsumptionRate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:text="@string/lorem_ipsum"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minimum_purchace_ammount"
            android:textSize="24dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/textViewMinimumPurchaceAmmount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:text="@string/lorem_ipsum"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/independence"
            android:textSize="24dp"
            android:drawableLeft="@drawable/ic_insert_emoticon_black_24dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/text_view_independence"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:text="@string/lorem_ipsum"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:textSize="24dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/text_view_item_price"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:text="@string/lorem_ipsum"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />

        <ImageButton
            android:id="@+id/buttonEditItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            />

        <ImageButton
            android:id="@+id/buttonDeleteItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/consumed_on_these_dates"
        android:textSize="24sp"
        android:gravity="center_horizontal"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewConsumptions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>